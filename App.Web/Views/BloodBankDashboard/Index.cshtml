@{
    ViewData["Title"] = "Blood Bank Dashboard";
}

<div class="max-w-6xl mx-auto mt-10">
    <h1 class="text-3xl font-bold mb-8 text-center" style="color:#B71C1C;">
        Blood Bank Dashboard
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- Blood Stock Card -->
        <div class="p-6 rounded-2xl shadow-lg transform transition duration-300
                    hover:shadow-2xl hover:-translate-y-3 border border-[#2E7D32] cursor-pointer"
             style="background-color:#FFFFFF;">
            <h3 class="text-xl font-bold mb-3" style="color:#2E7D32;">Blood Stock</h3>
            <p class="mb-4" style="color:#6B7280;">Manage blood inventory</p>

            <a asp-controller="Stock" asp-action="Index"
               class="block font-semibold" style="color:#2E7D32;">
                View Stock →
            </a>
        </div>

        <!-- Requests Card -->
        <div class="p-6 rounded-2xl shadow-lg transform transition duration-300
                    hover:shadow-2xl hover:-translate-y-3 border border-[#E53935] cursor-pointer"
             style="background-color:#FFFFFF;">
            <h3 class="text-xl font-bold mb-3" style="color:#E53935;">Requests</h3>
            <p class="mb-4" style="color:#6B7280;">Incoming blood requests</p>

            <a asp-controller="Requests" asp-action="Index"
               class="block font-semibold" style="color:#E53935;">
                View Requests →
            </a>
        </div>

    </div>
</div>