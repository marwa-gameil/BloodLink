@{
    ViewData["Title"] = "Hospital Dashboard";
}

<div class="max-w-6xl mx-auto mt-10">
    <h1 class="text-3xl font-bold mb-8 text-center" style="color:#B71C1C;">
        Hospital Dashboard
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- Blood Requests Card -->
        <div class="p-8 rounded-2xl shadow-lg border border-[#B71C1C] hover:shadow-2xl hover:-translate-y-2
                    transform transition duration-300 bg-white cursor-pointer">

            <div class="w-12 h-12 flex items-center justify-center rounded-xl mb-4"
                 style="background: linear-gradient(135deg,#FFCDD2,#EF5350); color:#FFFFFF;">
                <i class="fas fa-tint"></i>
            </div>

            <h3 class="text-xl font-bold mb-2" style="color:#B71C1C;">Blood Requests</h3>
            <p class="mb-6" style="color:#6B7280;">Track all blood requests</p>

            <a asp-controller="Hospital" asp-action="GetRquestsAsync"
               class="inline-block px-4 py-2 rounded-lg font-semibold border border-[#E53935]
                      transition duration-200 hover:bg-[#E53935] hover:text-white"
               style="color:#E53935;">
                View Requests →
            </a>
        </div>

        <!-- Create Blood Request Card -->
        <div class="p-8 rounded-2xl shadow-lg border border-[#B71C1C] hover:shadow-2xl hover:-translate-y-2
                    transform transition duration-300 bg-white cursor-pointer">

            <div class="w-12 h-12 flex items-center justify-center rounded-xl mb-4"
                 style="background: linear-gradient(135deg,#FFCDD2,#EF5350); color:#FFFFFF;">
                <i class="fas fa-plus"></i>
            </div>

            <h3 class="text-xl font-bold mb-2" style="color:#B71C1C;">Create Request</h3>
            <p class="mb-6" style="color:#6B7280;">Create a new blood request</p>

            <a asp-controller="Hospital" asp-action="CreateRequest"
               class="inline-block px-4 py-2 rounded-lg font-semibold border border-[#E53935]
                      transition duration-200 hover:bg-[#E53935] hover:text-white"
               style="color:#E53935;">
                + Create Request
            </a>
        </div>

    </div>
</div>
