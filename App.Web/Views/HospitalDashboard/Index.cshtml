@{
    ViewData["Title"] = "Hospital Dashboard";
}

<div class="max-w-6xl mx-auto mt-10">
    <h1 class="text-3xl font-bold text-red-600 mb-6">Hospital Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-6 bg-white shadow rounded">
            <h3 class="text-xl font-semibold mb-2">Blood Requests</h3>
            <p class="text-gray-600">Create and track blood requests</p>
            <a asp-controller="Requests" asp-action="Index"
               class="text-red-600 font-semibold mt-2 inline-block">
                View Requests →
            </a>
        </div>

        <div class="p-6 bg-white shadow rounded">
            <h3 class="text-xl font-semibold mb-2">Profile</h3>
            <p class="text-gray-600">Manage hospital data</p>
            <span class="text-gray-400 text-sm">Coming soon</span>
        </div>
    </div>
</div>
