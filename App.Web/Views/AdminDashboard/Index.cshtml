@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
        }

    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-bottom: 16px;
    }

    .icon-blood {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        color: white;
    }

    .icon-hospital {
        background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
        color: white;
    }

    .icon-users {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-top: 16px;
    }

        .btn-primary:hover {
            transform: translateX(3px);
            box-shadow: 0 6px 15px rgba(255, 107, 107, 0.4);
        }

    .btn-link {
        color: #ff6b6b;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-top: 16px;
        transition: all 0.3s ease;
    }

        .btn-link:hover {
            color: #ee5a6f;
            transform: translateX(3px);
        }

    .select-custom {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 14px;
        font-family: inherit;
        transition: all 0.3s ease;
        background-color: white;
        cursor: pointer;
        margin-bottom: 16px;
    }

        .select-custom:hover {
            border-color: #ff6b6b;
        }

        .select-custom:focus {
            outline: none;
            border-color: #ff6b6b;
            box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.1);
        }

    .label-custom {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
        font-size: 14px;
    }

    .badge-coming {
        display: inline-block;
        background: #f0f0f0;
        color: #999;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        margin-top: 16px;
    }

    .title-main {
        font-size: 36px;
        font-weight: 700;
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 32px;
    }

    .subtitle {
        color: #666;
        font-size: 15px;
        line-height: 1.6;
        margin-bottom: 16px;
    }

    .card-title {
        font-size: 20px;
        font-weight: 700;
        color: #333;
        margin-bottom: 8px;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }
</style>

<div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="title-main mb-12">Admin Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Blood Banks Card -->
        <div class="card p-8">
            <div class="icon-box icon-blood">
                <i class="fas fa-droplet"></i>
            </div>
            <h3 class="card-title">Blood Banks</h3>
            <p class="subtitle">Manage blood banks in the system</p>

            <form asp-controller="BloodBank" asp-action="GetBloodBanks" method="get">
                <label class="label-custom">Select Governorate</label>
                <select name="govern" class="select-custom">
                    <option value="">-- All Governorates --</option>
                    <option value="Cairo">Cairo</option>
                    <option value="Giza">Giza</option>
                    <option value="Alexandria">Alexandria</option>
                    <option value="Dakahlia">Dakahlia</option>
                    <option value="Sharqia">Sharqia</option>
                    <option value="Gharbia">Gharbia</option>
                    <option value="Monufia">Monufia</option>
                    <option value="Fayoum">Fayoum</option>
                    <option value="Asyut">Asyut</option>
                    <option value="Sohag">Sohag</option>
                    <option value="Qena">Qena</option>
                    <option value="Luxor">Luxor</option>
                    <option value="Aswan">Aswan</option>
                </select>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-arrow-right"></i>
                    View Blood Banks
                </button>
            </form>
        </div>

        <!-- Hospitals Card -->
        <div class="card p-8">
            <div class="icon-box icon-hospital">
                <i class="fas fa-hospital"></i>
            </div>
            <h3 class="card-title">Hospitals</h3>
            <p class="subtitle">Manage hospitals in the system</p>
            <a asp-controller="Hospital" asp-action="Index" class="btn-link">
                <i class="fas fa-arrow-right"></i>
                View Hospitals
            </a>
        </div>

        <!-- Users Card -->
        <div class="card p-8">
            <div class="icon-box icon-users">
                <i class="fas fa-users"></i>
            </div>
            <h3 class="card-title">Users</h3>
            <p class="subtitle">System users and roles</p>
            <span class="badge-coming">
                <i class="fas fa-clock"></i> Coming Soon
            </span>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}
