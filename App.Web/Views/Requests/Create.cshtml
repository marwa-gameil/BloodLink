@model App.Application.DTOs.CreateRequestDto
@{
    ViewData["Title"] = "Create Blood Request";
}

<div class="max-w-2xl mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Create Blood Request</h1>
        <p class="text-gray-600">Fill in the details to create a new blood request</p>
    </div>

    <div class="bg-white shadow-xl rounded-2xl p-8 border border-gray-100">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
                <div class="text-red-600"></div>
            </div>

            <div class="mb-6">
                <label asp-for="BloodBankId" class="block text-sm font-semibold text-gray-700 mb-2">
                    Blood Bank ID
                    <span class="text-red-600">*</span>
                </label>
                <input asp-for="BloodBankId" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all" placeholder="Enter Blood Bank ID" />
                <span asp-validation-for="BloodBankId" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="BloodType" class="block text-sm font-semibold text-gray-700 mb-2">
                    Blood Type
                    <span class="text-red-600">*</span>
                </label>
                <select asp-for="BloodType" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all">
                    <option value="">Select Blood Type</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
                <span asp-validation-for="BloodType" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Quantity" class="block text-sm font-semibold text-gray-700 mb-2">
                    Quantity 
                    <span class="text-red-600">*</span>
                </label>
                <input asp-for="Quantity" type="number" step="1" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all" placeholder="0.00" />
                <span asp-validation-for="Quantity" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="PatientName" class="block text-sm font-semibold text-gray-700 mb-2">
                    Patient Name
                    <span class="text-red-600">*</span>
                </label>
                <input asp-for="PatientName" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all" placeholder="Enter patient name" />
                <span asp-validation-for="PatientName" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="PatientPhoneNumber" class="block text-sm font-semibold text-gray-700 mb-2">
                    Patient Phone Number
                    <span class="text-red-600">*</span>
                </label>
                <input asp-for="PatientPhoneNumber" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all" placeholder="Enter phone number" />
                <span asp-validation-for="PatientPhoneNumber" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="NationalId" class="block text-sm font-semibold text-gray-700 mb-2">
                    National ID
                    <span class="text-red-600">*</span>
                </label>
                <input asp-for="NationalId" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all" placeholder="Enter national ID" />
                <span asp-validation-for="NationalId" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-8">
                <label asp-for="EndAt" class="block text-sm font-semibold text-gray-700 mb-2">
                    End Date
                    <span class="text-red-600">*</span>
                </label>
                <input asp-for="EndAt" type="datetime-local" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all" />
                <span asp-validation-for="EndAt" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-100">
                <button type="submit" class="flex-1 bg-red-600 text-white px-6 py-4 rounded-lg font-semibold hover:bg-red-700 transition-colors shadow-lg hover:shadow-xl">
                    âœ“ Create Request
                </button>
                <a asp-action="Index" class="flex-1 bg-gray-100 text-gray-700 px-6 py-4 rounded-lg font-semibold hover:bg-gray-200 transition-colors text-center">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
