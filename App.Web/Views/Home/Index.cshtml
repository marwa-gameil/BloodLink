@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="relative bg-cover bg-center bg-no-repeat" 
     style="background-image: url('/images/bg.jpg');">

    <!-- Overlay  -->
    <div class="absolute inset-0 bg-black/40"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 relative z-10">
        <div class="md:w-1/2 text-left">
            <h1 class="text-5xl md:text-6xl font-extrabold text-white mb-6">
               Connecting Lives<br>Through Smarter Blood Flow
            </h1>

            <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-lg">
The bridge between hospitals and blood banks            </p>
        </div>
    </div>
</div>



<!-- Blood Bank Search Section -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Find Blood Banks in Your Governorate</h2>
