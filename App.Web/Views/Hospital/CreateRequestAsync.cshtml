
@{
    ViewData["Title"] = "CreateRequestAsync";
}

<h1>CreateRequestAsync</h1>

@model App.Application.DTOs.CreateRequestDto
@{
    ViewData["Title"] = "Create Request";
}

<div class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-2xl rounded-2xl animate-slideUp">
    <h1 class="text-2xl font-bold mb-6 text-center text-red-600">Create New Blood Request</h1>

    <form asp-action="CreateRequestAsync" method="post" class="space-y-4">

        @* <!-- Hospital Name -->
        <div class="space-y-1">
            <label asp-for="HospitalName" class="block text-gray-700 font-semibold">Hospital Name</label>
            <input asp-for="HospitalName" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none bg-gray-100" />
            <span asp-validation-for="HospitalName" class="text-red-500 text-sm"></span>
        </div> *@

        <!-- Blood Type -->
        <div class="space-y-1">
            <label asp-for="BloodType" class="block text-gray-700 font-semibold">Blood Type</label>
            <select asp-for="BloodType" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none bg-gray-100">
                <option value="">Select Blood Type</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
            </select>
            <span asp-validation-for="BloodType" class="text-red-500 text-sm"></span>
        </div>

        <!-- Quantity -->
        <div class="space-y-1">
            <label asp-for="Quantity" class="block text-gray-700 font-semibold">Quantity (Units)</label>
            <input asp-for="Quantity" type="number" min="1" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none bg-gray-100" />
            <span asp-validation-for="Quantity" class="text-red-500 text-sm"></span>
        </div>

       @*  <!-- Priority -->
        <div class="space-y-1">
            <label asp-for="Priority" class="block text-gray-700 font-semibold">Priority</label>
            <select asp-for="Priority" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none bg-gray-100">
                <option value="">Select Priority</option>
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
            <span asp-validation-for="Priority" class="text-red-500 text-sm"></span>
        </div>

        <!-- Notes -->
        <div class="space-y-1">
            <label asp-for="Notes" class="block text-gray-700 font-semibold">Notes</label>
            <textarea asp-for="Notes" rows="3" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none bg-gray-100" placeholder="Optional"></textarea>
            <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
        </div> *@

        <!-- Submit Button -->
        <button type="submit" class="w-full py-3 bg-gradient-to-r from-red-400 to-pink-500 text-white font-bold rounded-lg hover:shadow-lg hover:-translate-y-1 transition-transform">
            Create Request
        </button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .animate-slideUp {
            animation: slideUp 0.5s ease-out;
        }
    </style>
}
