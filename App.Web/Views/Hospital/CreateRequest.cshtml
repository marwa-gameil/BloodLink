@model App.Application.DTOs.CreateRequestDto

@{
    ViewData["Title"] = "CreateRequest";
}

<div class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow rounded-lg">
    <h1 class="text-2xl font-bold mb-6 text-red-600">Create Blood Request</h1>

    <form asp-action="CreateRequestAsync" method="post" class="space-y-4">
        <div>
            <label class="block font-semibold mb-1">Blood Bank ID</label>
            <input asp-for="BLoodBankID" type="text" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="BLoodBankID" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">Quantity</label>
            <input asp-for="Quantity" type="number" step="0.01" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="Quantity" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">Blood Type</label>
            <select asp-for="BloodType" class="w-full border rounded px-3 py-2">
                <option value="">-- Select Blood Type --</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
            </select>
            <span asp-validation-for="BloodType" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">Patient Name</label>
            <input asp-for="PatientName" type="text" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="PatientName" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">Patient Phone Number</label>
            <input asp-for="PatientPhoneNumber" type="text" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="PatientPhoneNumber" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">National ID</label>
            <input asp-for="NationalId" type="text" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="NationalId" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">End At</label>
            <input asp-for="EndAt" type="datetime-local" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="EndAt" class="text-red-600 text-sm"></span>
        </div>

        <button type="submit" class="px-6 py-2 bg-red-600 text-white font-semibold rounded hover:bg-red-700">
            Create Request
        </button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}