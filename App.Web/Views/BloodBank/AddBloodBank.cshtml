@model App.Application.DTOs.CreateBloodBankDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Blood Bank";
}

<div class="max-w-xl mx-auto mt-10 bg-white p-6 shadow rounded">
    <h2 class="text-2xl font-bold mb-4">Create Blood Bank</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-4">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
            <ul class="list-disc pl-5">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="AddBloodBank" method="post">
        @Html.AntiForgeryToken()

        <input asp-for="Name" placeholder="Name" class="w-full border p-2 mb-3" />
        <input asp-for="Address" placeholder="Address" class="w-full border p-2 mb-3" />
        <input asp-for="Governorate" placeholder="Governorate" class="w-full border p-2 mb-3" />
        <input asp-for="PhoneNumber" placeholder="Phone Number" class="w-full border p-2 mb-3" />
        <input asp-for="Email" placeholder="Email" class="w-full border p-2 mb-3" />
        <input asp-for="LicenseNumber" placeholder="License Number" class="w-full border p-2 mb-3" />
        <input asp-for="Latitude" placeholder="Latitude" class="w-full border p-2 mb-3" />
        <input asp-for="Longitude" placeholder="Longitude" class="w-full border p-2 mb-3" />
        <input asp-for="Password" type="password" placeholder="Password" class="w-full border p-2 mb-3" />

        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded">
            Create
        </button>
    </form>
</div>