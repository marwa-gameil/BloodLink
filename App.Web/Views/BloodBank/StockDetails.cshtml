@model IEnumerable<App.Application.DTOs.BloodStockDto>
@{
    ViewData["Title"] = "Stock Details";
}

<div class="max-w-6xl mx-auto mt-10 p-4">
    <h1 class="text-3xl font-bold text-red-600 mb-8 text-center">Blood Stock Details</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var stock in Model)
        {
            <div class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-2xl transition-shadow relative">

                <h2 class="text-xl font-semibold mb-2">Blood Type: @stock.BloodType</h2>
                <p class="text-gray-600 mb-1"><strong>Quantity:</strong> @stock.Quantity Units</p>
                <p class="text-gray-600 mb-4"><strong>Last Updated:</strong> @stock.LastUpdated.ToShortDateString()</p>

                <div class="flex gap-3">
                    <a asp-action="Edit" asp-route-id="@stock.Id"
                       class="flex-1 text-center py-2 px-4 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
                        <i class="fas fa-edit mr-2"></i>Update
                    </a>
                </div>

            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}
