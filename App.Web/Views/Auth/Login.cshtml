@model App.Application.DTOs.LoginDTO
@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto mt-20 p-8 border rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>

    <form asp-action="Login" method="post">
        <div class="mb-4">
            <label asp-for="Email" class="block font-semibold mb-1"></label>
            <input asp-for="Email" class="w-full border px-3 py-2 rounded" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Password" class="block font-semibold mb-1"></label>
            <input asp-for="Password" type="password" class="w-full border px-3 py-2 rounded" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex justify-center">
            <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded hover:bg-red-700 transition">
                Login
            </button>
        </div>

        <div class="text-center mt-4 text-red-600">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
